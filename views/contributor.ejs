<!DOCTYPE html>
<html lang="en">
<%- include('layouts/head'); -%>

<body class="bg-light">
    <%- include('layouts/loggedheader'); -%>
   <main class="mt-5">
       <div class="container mt-5">
           <div class="container bg-light">
               <div class="contributor-blogs">
                   <h3 class="contributor-title text-center mb-3">My Blogs</h3>
                   <div class="container mb-3 bg-light">
                        <div class="row d-flex justify-content-between flex-wrap">
                        <% for (var i=0; i < allBlogposts.length; i++ ) { %>
                            <div class="card me-2 mb-3" style="width: 18rem;">
                                <img src="<%= allBlogposts[i].blogImage %>" class="card-img-top" alt="andrew">
                                <div class="card-body">
                                <h5 class="card-title"><%= allBlogposts[i].blogTitle %></h5>
                                <p class="card-text"><%= allBlogposts[i].blogDetails %></p>
                                <a href="/blog/<%=allBlogposts[i].id %>"" class="btn btn-primary">Read more</a>
                                </div>
                            </div>
                            <%} %>

                        </div>
                    </div>
               </div>
           </div>
       </div>
   </main>

    <%- include('layouts/footer'); -%>
    <%- include('layouts/scripts'); -%>
</body>
</html>